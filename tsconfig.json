{
  "extends": "@vue/tsconfig/tsconfig.web.json",
  "include": ["env.d.ts", "src/**/*", "src/**/*.vue"],
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"]
    },
    "jsx": "preserve",
    "noImplicitAny": true,
    "module": "es6",
    "allowSyntheticDefaultImports": true,
    "strictNullChecks": true,
    "strict": true
  },

  "references": [
    {
      "path": "./tsconfig.config.json"
    }
  ]
}
